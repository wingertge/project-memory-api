{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "semicolon": [true, "never"],
        "trailing-comma": false,
        "whitespace": [true,
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "object-literal-sort-keys": false,
        "eofline": false,
        "no-consecutive-blank-lines": false,
        "no-trailing-whitespace": [true, "ignore-template-strings", "ignore-blank-lines"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "ordered-imports": false,
        "curly": false,
        "max-line-length": [true, 220],
        "comment-format": false,
        "interface-name": false,
        "no-console": false,
        "object-literal-key-quotes": [true, "as-needed"]
    },
    "rules": {
        "semicolon": [true, "never"],
        "trailing-comma": false,
        "whitespace": [true,
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "object-literal-sort-keys": false,
        "eofline": false,
        "no-consecutive-blank-lines": false,
        "no-trailing-whitespace": [true, "ignore-template-strings", "ignore-blank-lines"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "ordered-imports": false,
        "curly": false,
        "max-line-length": [true, 220],
        "comment-format": false,
        "interface-name": false,
        "no-console": false,
        "object-literal-key-quotes": [true, "as-needed"]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "src/generated/**"
        ]
    }
}
